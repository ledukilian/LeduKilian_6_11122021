{% extends "base.html.twig" %}

{% block title %}
    Erreur 404 -
    {{parent()}}
{% endblock %}

{% block body %}
    <section class="container min-h-80">
        <div class="card border-0 col-12 col-md-10 col-lg-8 px-0 mx-auto bg-primary mt-5">
            <div class="card-header h5 text-white"><em class="fas fa-bug me-3"></em>Erreur 404</div>
            <div class="card-body d-flex flex-column justify-content-center bg-white text-black">
                <p>Non trouvé : La page que vous essayez d'appeler est introuvable.</p>
                <a class="ms-auto mt-2" href="{{ path('show_index') }}">
                    <button class="btn btn-primary"><em class="fas fa-arrow-alt-circle-right me-2"></em>Revenir à l'accueil</button>
                </a>
            </div>
        </div>
    </section>
{% endblock %}
