{% extends "base.html.twig" %}

{% block title %}
    Tricks -
    {{parent()}}
{% endblock %}

{% block body %}
    <section id="tricks" class="d-flex flex-row flex-wrap justify-content-around container mt-4 pt-3 pb-5 mb-5 text-center">
        <div class="col-12 d-flex flex-row flex-wrap mb-4 px-3">
            <h3 class="fw-normal display-5"><em class="fas fa-snowboarding text-primary me-3"></em>Tricks</h3>
            <button class="btn align-self-center btn-success ms-auto">Ajouter un nouveau</button>
        </div>
        <div class="d-flex flex-row flex-wrap container text-center" id="tricks-list">
            {% for trick in tricks %}
                <a href="/trick/{{ trick.slug }}" class="mb-3 col-sm-12 col-md-4 px-2 trick">
                    <article class="card bg-light d-flex flex-row flex-wrap card-body p-2 shadow-sm">
                        <img class="col-12 rounded px-0" src="{{ asset('img/default_trick.jpg') }}" alt="Trick" />
                        <h5 class="card-title text-dark px-0 mt-1 m-0 fw-bold"><em class="fas fa-chevron-right text-primary me-1"></em>{{ trick.name }}</h5>
                        <div class="ms-auto pt-1">
                            <em class="fas fa-edit text-warning"></em>
                            <em class="fas fa-trash-alt text-danger"></em>
                        </div>
                    </article>
                </a>
            {% endfor %}
        </div>
        <div class="w-100">
            <img id="loader" class="col-12 rounded mx-auto" src="{{ asset('img/loader.gif') }}" alt="Trick" />
        </div>
        {% if remain_tricks == true %}
            <button class="btn btn-primary mt-3" id="load-more" data-element="trick" data-format="4" data-limit="9" data-offset="9">
                <em class="fas fa-spinner"></em><br />Charger plus de tricks
            </button>
        {% endif %}
    </section>
{% endblock %}
